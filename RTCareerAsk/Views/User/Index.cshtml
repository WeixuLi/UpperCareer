@model RTCareerAsk.Models.UserDetailModel

@{
    RTCareerAsk.Models.TabModel tabModel = new RTCareerAsk.Models.TabModel();
    tabModel.TabItems.Add("TA的问题", new RTCareerAsk.Models.ActionLinkParams() { ActionName = "RecentRecord", ControllerName = "User", RouteValues = new { contentType = 1, targetId = Model.UserID, pageIndex = 0 } });
    tabModel.TabItems.Add("TA的回答", new RTCareerAsk.Models.ActionLinkParams() { ActionName = "RecentRecord", ControllerName = "User", RouteValues = new { contentType = 2, targetId = Model.UserID, pageIndex = 0 } });
    tabModel.ActiveItem = "TA的问题";
    tabModel.AjaxOptns = new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "divUserRecord", OnComplete = "OnUpdateContentComplete" };
}

<div class="user-page">
    <div class="info">
        @Html.Partial("_UserDetail", Model)
    </div>
    <div class="record">
        <div class="wrap">
            @Ajax.UpperTab(tabModel, null)
            <div id="divUserRecord">
                @Html.Partial("_RecentQuestions", Model.RecentQuestions)
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/user")
}