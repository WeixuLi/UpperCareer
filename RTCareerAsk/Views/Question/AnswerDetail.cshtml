@model RTCareerAsk.Models.AnswerModel

@{
    ViewBag.Title = "AnswerDetail";
}

<div class="answer">
    <div>
        @Html.Partial("_AnswerDetail", Model)
    </div>
    <div>
        <span class="cmt-count">@Model.Comments.Count</span>
        条评论
    </div>
    <div id="@string.Format("divCmtList{0}", Model.ID)" class="comment-list">
        @Html.Partial("_CommentDetail", Model.Comments)
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/answer")
}