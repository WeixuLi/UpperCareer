@model RTCareerAsk.Models.CommentPostModel

<div id="@string.Format("divCmtForm{0}", @Model.AnswerID)" class="collapse">
    <div class="well">
        @using (Ajax.BeginForm("PostComment", "Question", new { }, new AjaxOptions
        {
            LoadingElementId = "divInfoLoading",
            UpdateTargetId = string.Format("divCmtList{0}", Model.AnswerID),
            OnBegin = "OnCmtBegin",
            OnSuccess = "OnCmtSuccess",
            OnComplete = "OnCmtComplete",
            OnFailure = "OnCmtFailure"
        }, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(model => model.AnswerID)
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.TextAreaFor(model => model.PostContent, new { style = "width:100%", rows = "4", placeholder = "请在此输入评论内容" })
                    <span class="validate">@Html.ValidationMessageFor(model => model.PostContent, "", new { @class = "validation-msg" })</span>
                </div>
            </div>
            <div class="form-group">
                <div class="btn-group col-lg-offset-10">
                    <button type="reset" class="btn btn-default" data-toggle="collapse" data-target="@string.Format("#divCmtForm{0}", @Model.AnswerID)" aria-expanded="false" aria-controls="collapseExample">放弃</button>
                    <button type="submit" class="btn btn-primary">提交</button>
                </div>
            </div>
        }
    </div>
</div>
