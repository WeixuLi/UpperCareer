@model IEnumerable<RTCareerAsk.Models.CommentModel>
<div class="feed-comment">
    <div class="input">
        <div class="placeholder">
            <span>留下你的评论</span>
        </div>
        <div class="text">
            <div contenteditable="true" class="textbox"></div>
            <div><a href="#" class="btn btn-success btn-xs">提交评论</a></div>
        </div>
    </div>

    <div class="list">
        <ul class="list-group" style="margin-top: 50px">
            @foreach (RTCareerAsk.Models.CommentModel cmt in Model)
            {
                <li class="list-group-item">
                    <div class="header">
                        @Html.UpperNameTag(cmt.Creator)
                    </div>
                    <div></div>
                    <div class="body">
                        <p>@Html.Raw(HttpUtility.HtmlDecode(cmt.Content))</p>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
