<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/upper_logo_64px.ico" rel="shortcut icon" type="image/x-icon" />
    <div id="wx_pic" style="margin: 0 auto; display: none;">
        <img src="/Images/wx_pic.png" />
    </div>
    <div id="wx_con" style="margin: 0 auto; display: none;">
        <p>UpperCareer - 真实的职场知识、经验、见解分享社区</p>
    </div>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript">
        var updateMsgCount = "@Url.Action("UpdateMsgCount", "Message")",
            loadQuestionForm = "@Url.Action("CreateQuestionForm", "Question")",
            changePortrait = "@Url.Action("ChangePortrait", "Account")",
            updateContent = "@Url.Action("UpdateContent", "Question")",
            deleteAnswer = "@Url.Action("DeleteAnswer", "Question")",
            deleteComment = "@Url.Action("DeleteComment", "Question")"

        var pageTopOffset = 90;
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/base")
    <script src="~/ckeditor/ckeditor.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    <div id="container">
        <header>
            <div id="divNavBar">
                @Html.Partial("_NavBar")
            </div>
            <div class="modal fade" id="divModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                </div>
            </div>
            <div id="divModalLg" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                <div class="modal-dialog modal-lg" role="document">
                </div>
            </div>
            <div id="divModalSm" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                </div>
            </div>
        </header>
        <div id="body">
            <div>
                @RenderSection("frontline", required: false)
            </div>
            <div class="container">
                @RenderSection("featured", required: false)
                <section>
                    @RenderBody()
                </section>
            </div>
        </div>
        <footer id="footer">
            <div class="container">
                <div>
                    <p>&copy; @DateTime.Now.Year - Upper - Boost your life</p>
                </div>
            </div>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
