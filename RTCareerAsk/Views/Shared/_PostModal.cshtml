@model RTCareerAsk.Models.QuestionPostModel

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="postQuestionModalLabel">请输入您的问题……</h4>
    </div>
    @using (Ajax.BeginForm("PostQuestion", "Question", new { }, new AjaxOptions
            {
                LoadingElementId = "divInfoLoading",
                UpdateTargetId = "divQuestionList",
                OnBegin = "OnPostBegin",
                OnSuccess = "OnPostSuccess",
                OnComplete = "OnPostComplete",
                OnFailure = "OnPostFailure"
            }, new { enctype = "multipart/form-data", @class = "form-horizontal", id = "formNewPost" }))
    {
        <div class="modal-body post">
            <div>
                @*<div class="display">
                    @Html.LabelFor(model => model.PostTitle)
                </div>*@
                <div class="edit-title">
                    @Html.TextBoxFor(model => model.PostTitle, new { placeholder = "请输入问题标题" })
                    <span class="help-block">这是一句描述</span>
                    <span class="help-block">这是一句描述</span>
                    <span class="help-block">这是一句描述</span>
                </div>
            </div>
            <div class="validate">
                @Html.ValidationMessageFor(model => model.PostTitle, "", new { @class = "validation-msg" })
            </div>
            <div>
                @Html.TextAreaFor(model => model.PostContent, new { id = "txtPostContent", style = "width:100%", rows = "8", placeholder = "请输入问题内容……" })
                <script>
                    CKEDITOR.replace("txtPostContent");
                </script>
            </div>
            <div class="validate">
                @Html.ValidationMessageFor(model => model.PostContent, "", new { @class = "validation-msg" })
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <input type="submit" class="btn btn-primary" value="提交问题" />
        </div>
    }
    <script type="text/javascript">
        $.validator.unobtrusive.parse("#formNewPost");
    </script>
</div>

