@model RTCareerAsk.Models.AnswerPostModel

<div id="divAnsForm" class="collapse">
    <div class="well">
        @using (Ajax.BeginForm("PostAnswer", "Question", new { }, new AjaxOptions
        {
            LoadingElementId = "divInfoLoading",
            UpdateTargetId = "divAnswerList",
            OnBegin = "OnAnsBegin",
            OnSuccess = "OnAnsSuccess",
            OnComplete="OnAnsComplete",
            OnFailure = "OnAnsFailure"
        }, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.HiddenFor(model => model.QuestionID)
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.TextAreaFor(model => model.PostContent, new { style = "width:100%", rows = "4", placeholder = "请在此输入答案内容" })
                    <span class="validate">@Html.ValidationMessageFor(model => model.PostContent, "", new { @class = "validation-msg" })</span>
                </div>
            </div>
            <div class="form-group">
                <div class="btn-group col-lg-offset-10">
                    <button type="reset" class="btn btn-default" data-toggle="collapse" data-target="#divAnsForm" aria-expanded="false" aria-controls="collapseExample">放弃</button>
                    <button type="submit" class="btn btn-primary">提交</button>
                </div>
            </div>
        }
    </div>
</div>

